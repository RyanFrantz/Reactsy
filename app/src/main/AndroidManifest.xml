<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.etsy.android.reactsy" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/reactsy_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".VolleyApplication">
        <activity
            android:name=".ReactsyConfigureActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Reactsy"
                  android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ReactsySettingsActivity"
            android:label="@string/app_name"/>
    </application>

</manifest>
